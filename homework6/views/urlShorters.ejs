<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>URL Shorter</title>
    <script type="module" src="../client/urlShorters.js"></script>
</head>
<body>
    <h1>User shorter</h1>

    <h2>Create url shorter</h2>
    <h3>Current user: <% currentUser %></h2>
    <form action="/urls/add" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<% currentUser %>" disabled>
        <label for="url">url:</label>
        <input type="text" id="url" name="url" required>
        <button type="submit">Add url</button>
    </form>

    <h2>Created url shorters:</h2>
    <ul id="url-list">
        <% urls.forEach(url => { %>
            <li><%= url.url %></li>
        <% }); %>
    </ul>
</body>
</html>